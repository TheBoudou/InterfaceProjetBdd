<Window x:Class="InterfaceProjetBdd.MenuStatistique"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfaceProjetBdd"
        mc:Ignorable="d"
        Title="MenuStatistique" Height="450" Width="800">
    <Grid>
        <Image x:Name="Image_Acceuil" HorizontalAlignment="Left" Margin="546,133,0,0" VerticalAlignment="Top" Width="217" Source="/modele-logo-fleur-verte_2242-8.png" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.157"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Button x:Name="Retour" Content="Retour" HorizontalAlignment="Left" Margin="589,372,0,0" VerticalAlignment="Top" Width="130" Click="Retour_Click"/>
        <Button Name="MeilleurClientMois" Content="Meilleur client du mois" HorizontalAlignment="Left" Height="35" Margin="35,38,0,0" VerticalAlignment="Top" Width="130" Click="MeilleurClientMois_Click"/>
        <DataGrid Name="AffichagePrincipal" HorizontalAlignment="Left" Height="206" Margin="0,228,0,0" VerticalAlignment="Top" Width="523" d:ItemsSource="{d:SampleData ItemCount=5}"/>
        <Button Name="MeilleurClientAnnee" Content="Meilleur client de l'année" HorizontalAlignment="Left" Height="41" Margin="35,78,0,0" VerticalAlignment="Top" Width="130" Click="MeilleurClientAnnee_Click"/>
        <TextBox x:Name="nom_client" HorizontalAlignment="Left" Margin="262,73,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" IsEnabled="False" TextChanged="nom_client_TextChanged"/>
        <Button Name="BouqueStdSucces" Content="Bouquet ayant le plus de succès" HorizontalAlignment="Left" Margin="35,124,0,0" VerticalAlignment="Top" Height="43" Width="188" Click="BouqueStdSucces_Click"/>
        <Button Name="MasasinGrosCA" Content="Magasin ayant le plus gros CA" HorizontalAlignment="Left" Margin="35,172,0,0" VerticalAlignment="Top" Width="227" Click="MasasinGrosCA_Click"/>

    </Grid>
</Window>
